keywords = {Aquaculture,Asia,Mapping,SAR,Sentinel-1A},
month = {sep},
title = {{Earth observation based mapping of coastal aquaculture ponds in Asian hotspots - An object-based analysis of high spatial resolution Sentinel-1A SAR data}},
url = {https://elib.dlr.de/106089/},
year = {2016}
}
@inproceedings{dlr120926,
