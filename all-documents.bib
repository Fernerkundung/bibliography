doi = {10.5194/hess-21-3991-2017},
file = {:C$\backslash$:/Users/Kersten/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Van Khanh Triet et al. - 2017 - Has dyke development in the Vietnamese Mekong Delta shifted flood hazard downstream.pdf:pdf},
issn = {16077938},
journal = {Hydrology and Earth System Sciences},
number = {8},
pages = {3991--4010},
title = {{Has dyke development in the Vietnamese Mekong Delta shifted flood hazard downstream?}},
volume = {21},
year = {2017}
}
