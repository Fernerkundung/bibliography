file = {:C$\backslash$:/Users/clau{\_}ke/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Van Khanh Triet et al. - 2017 - Has dyke development in the Vietnamese Mekong Delta shifted flood hazard downstream.pdf:pdf},
issn = {16077938},
journal = {Hydrology and Earth System Sciences},
number = {8},
