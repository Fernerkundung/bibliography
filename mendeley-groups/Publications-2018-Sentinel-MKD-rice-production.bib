file = {:C$\backslash$:/Users/clau{\_}ke/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Son et al. - 2014 - A phenology-based classification of time-series MODIS data for rice crop monitoring in Mekong Delta, Vietnam.pdf:pdf},
isbn = {8860933012400},
issn = {20724292},
journal = {Remote Sensing},
keywords = {EMD,MODIS,Phenology-based classification,Rice cropping systems,mapping,optical,rice},
